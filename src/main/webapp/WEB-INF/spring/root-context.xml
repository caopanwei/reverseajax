<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dwr="http://www.directwebremoting.org/schema/spring-dwr"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:wss="http://jax-ws.dev.java.net/spring/servlet"
	xmlns:ws="http://jax-ws.dev.java.net/spring/core"
	xsi:schemaLocation="http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.1.xsd
		http://www.directwebremoting.org/schema/spring-dwr http://www.directwebremoting.org/schema/spring-dwr-3.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd
		http://jax-ws.dev.java.net/spring/core
        http://jax-ws.dev.java.net/spring/core.xsd
        http://jax-ws.dev.java.net/spring/servlet
        http://jax-ws.dev.java.net/spring/servlet.xsd">

	<bean id="wsClient"
		class="org.springframework.remoting.jaxws.JaxWsPortProxyFactoryBean"
		p:serviceInterface="com.ajax.reverse.jaxws.MessageWebServiceInterface"
		p:wsdlDocumentUrl="http://localhost:8080/reverse/ws?wsdl"
		p:endpointAddress="http://localhost:8080/reverse/ws"
		p:lookupServiceOnStartup="false" p:portName="messageWebServicePort"
		p:serviceName="MessageWebServiceService" p:namespaceUri="http://jaxws.reverse.ajax.com/">
	</bean>

	<!-- simpler way to do the same as above -->
	<!-- <bean id="wsClient" class="com.ajax.reverse.jaxws.SimpleJaxWsFactory"> -->
	<!-- <property name="serviceInterface" value="com.ajax.reverse.jaxws.MessageWebServiceInterface" 
		/> -->
	<!-- <property name="localWsdlName" value="/ws?wsdl ???" /> -->
	<!-- <property name="endpointAddress" -->
	<!-- value="http://localhost:8080/reverse/ws" /> -->
	<!-- </bean> -->

	<wss:binding url="/ws">
		<wss:service>
			<ws:service bean="#messageWebService" />
		</wss:service>
	</wss:binding>

	<context:component-scan base-package="com.ajax.**" />

	<!-- important proxy-target-class="true" to use cglib proxy mechanism -->
	<aop:aspectj-autoproxy proxy-target-class="true" />

	<aop:config>
		<aop:advisor advice-ref="traceInterceptor"
			pointcut="@annotation(com.ajax.reverse.annotation.Trace)" />
		<aop:advisor advice-ref="traceInterceptor"
			pointcut="within(com.ajax.reverse.service..*)" />
	</aop:config>

	<dwr:controller />
	<dwr:url-mapping />
	<dwr:annotation-config />
	<dwr:configuration />

	<bean id="mongoTemplate" class="org.springframework.data.mongodb.core.MongoTemplate">
		<constructor-arg name="mongo" ref="mongo" />
		<constructor-arg name="databaseName" value="reverseajax" />
	</bean>

	<bean id="mongo" class="org.springframework.data.mongodb.core.MongoFactoryBean">
		<property name="host" value="localhost" />
	</bean>

	<bean id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basename" value="classpath:messages" />
		<property name="defaultEncoding" value="UTF-8" />
		<property name="useCodeAsDefaultMessage" value="true" />
	</bean>

	<bean id="themeSource"
		class="org.springframework.ui.context.support.ResourceBundleThemeSource">
		<property name="basenamePrefix" value="theme-" />
	</bean>

</beans>
